<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs")%>
        <title>Document</title>
    </head>
    <body>
        <%- include("../partials/navbar.ejs")%>
        <main>
            <div class="container">
                <div class="columns">
                    <div class="column is-half is-offset-one-quarter">
                        <%if (id) {%>
                        <h1 class="title">Showing comment <%=id%></h1>
                        <form action="/comments" class="mb-5">
                            <div class="field"><button class="button is-primary">Return</button></div>
                        </form>
                        <%- include("../partials/comment.ejs", { id:id, username: username, comment: comment })%> <%} else {%>
                        <h1 class="title mb-5">No comment found!</h1>
                        <%}%>
                    </div>
                </div>
            </div>
        </main>
        <%- include("../partials/footer.ejs")%>
        <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
        <script type="module" src="/js/edit-comment.js"></script>
        <script type="module" src="/js/delete-comment.js"></script>
    </body>
</html>
